@model Actor

@{
    ViewData["Title"] = "Update actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ActorPicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorPictureURL" class="control-label"></label>
                        <input asp-for="ActorPictureURL" class="form-control" />
                        <span asp-validation-for="ActorPictureURL" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="ActorNumber"/>
                    <div class="form-group">
                        <label asp-for="ActorFirstName" class="control-label"></label>
                        <input asp-for="ActorFirstName" class="form-control" />
                        <span asp-validation-for="ActorFirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorSurname" class="control-label"></label>
                        <input asp-for="ActorSurname" class="form-control" />
                        <span asp-validation-for="ActorSurname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ActorPicturePreview');
            output.src = $("#ActorPictureURL").val();
        })
        $("#ActorPictureURL").on("change", function () {
            var output = document.getElementById('ActorPicturePreview');
            output.src = $(this).val();
        })
    </script>
}