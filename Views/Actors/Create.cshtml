@model Actor

@{
    ViewData["Title"] = "Add a new actor";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
            <div class="row">
              <div class="col-md-8">
                <div class="row">
                  <div class="col-xl-8 mb-xl-0 mb-4 me-2">
                    <div class="card mb-4" style="width: 50rem;">
                      <div class="card-header pb-0">
                        <h2 class="mt-3 mb-2 text-center text-primary">Insert New Actor</h2>
                      </div>
                      <div class="card-body px-2 pt-0 pb-2">


                        <div class="row">
                          <div class="col">
                            <ul class="list-group">
                              <li class="list-group-item border-0 d-flex justify-content-start ps-0 mb-4">
                                <div class="d-flex flex-column">
                                  <p class="mb-1 text-dark font-weight-bold text-md ms-4 mt-2 me-2">First Name:</p>
                                </div>
                                <div class="p-2 input-group-sm" style=" width: 65%">
                                  <input type="text" class="form-control">
                                 </div>
                              </li>
                            </ul>
                            <ul class="list-group">
                              <li class="list-group-item border-0 d-flex justify-content-start ps-0 mb-4">
                                <div class="d-flex flex-column">
                                  <p class="mb-1 text-dark font-weight-bold text-md ms-4 mt-2 me-2">Last Name:</p>
                                </div>
                                <div class="p-2 input-group-sm" style=" width: 65%">
                                  <input type="text" class="form-control">
                                 </div>
                              </li>
                            </ul>
                            <ul class="list-group">
                              <li class="list-group-item border-0 d-flex justify-content-start ps-0 mb-4 border-radius-lg">
                                <div class="d-flex flex-column">
                                  <h6 class="mb-1 text-dark font-weight-bold text-md ms-4 mt-2 me-1">Image Link:</h6>
                                </div>
                                <div class="p-2 input-group-sm" style=" width: 65%">
                                  <input type="text" class="form-control">
                                 </div>
                              </li>
                            </ul>
                          </div>
                          <div class="col-6">
                            <div class="card ms-6 h-100" style="height: 100%; width: 70%">
                             
                              <div class="card-body">
                                  <img src="wwwroot/images/testimages/product-01.jpg" class="img-thumbnail" style="height: 100%; width: 100%;">
                              </div>
                            </div>
                          </div>
                        </div>  

                      <div class="row">
                        <div class="col-sm justify-content-center mt-4" style="margin-left: 2rem;">
                          <button type="button" class="btn btn-outline-danger btn-md px-4">
                            Cancel
                          </button>
                        </div>
                        <div class="col-sm justify-content-center mt-4" style="margin-left: 18rem;">
                            <button type="button" class="btn btn-outline-warning btn-md px-4">
                              Create
                            </button>
                        </div>
                    </div> 
                </div>
                </div>
                </div>
               
                </div>
                
              </div>
            </div>
          </div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ActorPicturePreview');
            output.src = $("#ActorPictureURL").val();
        })
        $("#ActorPictureURL").on("change", function () {
            var output = document.getElementById('ActorPicturePreview');
            output.src = $(this).val();
        })
    </script>
}
