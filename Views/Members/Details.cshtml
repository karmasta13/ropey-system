@using RopeyDVDSystem.Models.ViewModels;
@model IEnumerable<ReturnModel>

@{
    ViewData["Title"] = "Member Details";
    Layout = "_AdminLayout";
}




<div class="container-fluid py-4">
                      <div class="row">
                        <div class="col-lg-18">
                          <div class="row">
                            <div class="col-xl-12 mb-xl-0">
                              <div class="card mb-0">
                                <div class="card-header pb-0 mb-3">
                                  
                                  <h4 class="mt-3 text-center text-primary " style="letter-spacing: 1px;">Member Details</h4>
                                  <hr class ="text-secondary">
                                </div>
                                
                                <div class="card-body px-2 pt-0 pb-2 mb-4">
                                  <div class="row">
                                    <div class="col">
                                      <ul class="list-group">
                                        <li class="list-group-item border-0 d-flex  ps-0 mb-1 border-radius-lg">
                                          <div class="d-flex flex-column">
                                            <h6 class="mb-0 text-dark opacity-8 font-weight-bold text-md ms-8">Member Name:</h6>
                                          </div>
                                          <div class="d-flex text-md ms-4">
                                            @ViewBag.MemberFirstName @ViewBag.MemberLastName
                                          </div>
                                        </li>
                                      </ul>
                                      <ul class="list-group">
                                        <li class="list-group-item border-0 d-flex justify-content-start ps-0  border-radius-sm">
                                          <div class="d-flex flex-column">
                                            <h6 class=" text-dark  opacity-8 font-weight-bold text-md ms-8">Member Address:</h6>
                                          </div>
                                          <div class="d-flex text-md ms-2">
                                            @ViewBag.MemberAddress
                                          </div>
                                        </li>
                                      </ul>
                                    </div>
                                    <div class="col-5">
                                      <ul class="list-group">
                                        <li class="list-group-item border-0 d-flex justify-content-start ps-0 mb-1 border-radius-sm">
                                          <div class="d-flex flex-column">
                                            <h6 class="mb-0 text-dark opacity-8 font-weight-bold text-md ms-4">Member Number:</h6>
                                          </div>
                                          <div class="d-flex text-md ms-4">
                                            @ViewBag.MemberNumber
                                          </div>
                                        </li>
                                      </ul>
                                      <ul class="list-group">
                                        <li class="list-group-item border-0 d-flex justify-content-start ps-0 mb-1 border-radius-lg">
                                          <div class="d-flex flex-column">
                                            <h6 class="mb-0 text-dark opacity-8 font-weight-bold text-md ms-4">Date Of Birth:</h6>
                                          </div>
                                          <div class="d-flex text-md ms-4">
                                            @ViewBag.Birthday
                                          </div>
                                        </li>
                                      </ul>
                                  </div>    
                     
                          </div>
                                </div>
                          </div>
                          </div>
                          </div>
                          </div>
                          </div>
                    </div>


                    <div class ="container-fluid ">
                        <div class ="card">
                          <div class ="card-header">
                            <h6 class ="mt-3 mx-3 text-secondary opacity-6">Loans taken by members in last 31 days</h6> 
                        </div>

                        <div class="card-body px-0 pt-0 pb-2">
                          <div class="table-responsive p-0 mx-3">
                            <table class="table align-items-center mb-0">
                              <thead>
                                <tr>
                                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-4 col-2">Loan Number</th>
                                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">Copy Number</th>
                                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ">DVD Title</th>
                                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">Date Out</th>
                                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2 ">Date Returned</th>
                                </tr>
                              </thead>
                                <tbody>
                                    @foreach (var loanDetail in Model){
                                        <tr>
                                          <td class="align-middle text-start">
                                            <span class="text-xs font-weight-bold mx-5">@loanDetail.LoanNumber</span>
                                          </td> 
                                          <td class="align-middle text-start">
                                            <span class="text-xs font-weight-bold mx-5">@loanDetail.CopyNumber</span>
                                          </td> 
                                          <td>
                                            <div class="d-flex px-2 py-1">
                                              <div class="d-flex flex-column justify-content-center">
                                                <p class="mb-0 text-xs ms-2 font-weight-bold">@loanDetail.DVDTitleName</p>
                                              </div>
                                            </div>
                                          </td>
                                          <td>
                                            <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => loanDetail.DateOut) </p>
                                          </td>
                                          <td>
                                            @if(loanDetail.DateReturn!=DateTime.MinValue){
                                            <p class="text-xs font-weight-bold mb-0 ms-4">@Html.DisplayFor(modelItem => loanDetail.DateReturn)</p>
                                            }
                                          </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                          </div>
                        </div>
                        
                      </div>
                    </div>
