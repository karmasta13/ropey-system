@model Studio

@{
    ViewData["Title"] = "Delete studio";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-xl-6 mb-xl-0 mb-4 me-2">
            <div class="card mb-4" style="width: 40rem;">
              <div class="card-header pb-0">
                <h4 class="mt-3 mb-2 ms-2 text-start text-primary">Delete Confirmation for @Model.StudioName</h4>
              </div>
              <div class="card-body px-2 pt-0 pb-2">
                <div class="row">
                  <div class="col">
                    <ul class="list-group">
                      <li class="list-group-item border-0 d-flex justify-content-start ps-0">
                        <div class="d-flex flex-column">
                          <p asp-for="StudioName" class="text-dark font-weight-bold text-md ms-4 mt-2 me-1">Studio Name:</p>
                        </div>
                        <div class="p-2 input-group-sm" style="width: 50%; height: 30%; margin-left: 2rem;">
                          <input asp-for="StudioName" type="text" class="form-control" readonly/>
                         </div>
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm justify-content-center" style="margin-left: 1rem;">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-md px-4 py-2">
                      Show All
                    </a>
                  </div>
                  <div class="col-sm justify-content-center mt-1" style="margin-right: 8rem;">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="StudioNumber" />
                        <input type="submit" value="Confirm" class="btn btn-primary btn-md px-4 py-2" />
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
